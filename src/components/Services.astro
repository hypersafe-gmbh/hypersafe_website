---
import Container from './Container.astro';

const servicesData = [
    {
        "id": 1,
        "name1": "Security Audits",
        "name2": "Code Reviews",
        "background": "bg-zinc-100 rounded-[45px] shadow border border-black justify-between items-center flex text-black",
        "image": "./services/01.svg"
    },
    {
        "id": 2,
        "name1": "Secure Software",
        "name2": "Tooling Development",
        "background": "bg-stone rounded-[45px] shadow border border-black justify-between items-center flex text-white",
        "image": "./services/02.svg"
    },
    {
        "id": 3,
        "name1": "Blockchain Security",
        "name2": "Advising & Training",
        "background": "bg-stone rounded-[45px] shadow border border-black justify-between items-center flex text-white",
        "image": "./services/03.svg"
    },
    {
        "id": 4,
        "name1": "Infrastructure Security",
        "name2": "Penetration Testing",
        "background": "bg-zinc-100 rounded-[45px] shadow border border-black justify-between items-center flex text-black",
        "image": "./services/04.svg"
    }
]
---

<Container>
  <div class="relative flex flex-col items-center md:flex-row md:pt-10" id="services">
    <div class="row items-center py-5 md:pr-20 md:w-4/12 md:py-10">
      <div class="text-center md:text-left space-y-3">
        <h2 class="text-4xl font-medium leading-none sm:text-6xl">
          Our Services
        </h2>
      </div>
    </div>
    <div class="flex items-center py-5 md:w-9/12 md:py-10">
      <p class="text-xl font-normal leading-7 text-center md:text-left">
        HyperSafe is a cybersecurity agency specialized in the Web3/Blockchain
        ecosystem. HyperSafe provides cybersecurity consulting services and
        solutions to its customers.
      </p>
    </div>
  </div>

  <div class="flex-row items-center py-5">
    <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 gap-4">
      <!-- card start-->
      {
        servicesData.map(({ background, name1, name2 }) => (
          <div class={background + " h-[250px] p-12"}>
            <div class="flex-col justify-center gap-[93px] inline-flex">
              <div class="flex-col justify-center items-start flex h-20">
                <div class="rounded-[7px] flex-col flex text-3xl font-medium">
                  <div>{name1}</div>
                  <div>{name2}</div>
                </div>
              </div>
            </div>
          </div>
        ))
      }
      <!-- card end-->
    </div>
  </div>
</Container>
